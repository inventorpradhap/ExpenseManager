<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="8dp" android:background="#f5f5f5">
    <TextView android:id="@+id/txtTitle"
        android:layout_width="0dp" android:layout_weight="2" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/txtCategory"
        android:layout_width="0dp" android:layout_weight="2" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/txtAmount"
        android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:textStyle="bold"/>
</LinearLayout>
